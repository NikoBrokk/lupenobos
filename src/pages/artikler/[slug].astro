---
// Dynamisk artikkelside for Content Collection "artikler"
import { getCollection } from "astro:content";

// Bygger alle slug-er fra content-mappa
export async function getStaticPaths() {
  const entries = await getCollection("artikler");
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<main class="mx-auto max-w-3xl px-6 md:px-12 py-10">
  <header class="mb-8">
    <h1 class="text-3xl md:text-4xl font-semibold">{entry.data.title}</h1>
    <p class="text-sm opacity-70 mt-2">
      {new Date(entry.data.pubDate).toLocaleDateString("no-NO")}
      {entry.data.tag && ` Â· ${entry.data.tag}`}
    </p>
    {entry.data.image && (
      <img src={entry.data.image} alt={entry.data.title} class="rounded-2xl mt-6" />
    )}
    {entry.data.description && <p class="mt-4">{entry.data.description}</p>}
  </header>

  <article class="prose prose-invert">
    <Content />
  </article>
</main>
