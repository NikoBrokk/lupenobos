---
import { getEntryBySlug } from "astro:content";
import { Markdown } from "astro/components";
const { slug } = Astro.params;
const entry = await getEntryBySlug("articles", slug!);
if (!entry) throw new Error(`Fant ikke artikkel: ${slug}`);
const { Content } = await entry.render();
---

<main class="mx-auto max-w-3xl px-6 md:px-12 py-10 prose prose-invert">
  <header class="mb-8">
    <h1>{entry.data.title}</h1>
    <p class="text-sm opacity-70">
      {new Date(entry.data.pubDate).toLocaleDateString('no-NO')}
      {entry.data.tag && ` Â· ${entry.data.tag}`}
    </p>
    {entry.data.image && <img src={entry.data.image} alt={entry.data.title} class="rounded-2xl" />}
    {entry.data.description && <p class="mt-4">{entry.data.description}</p>}
  </header>

  <article>
    <Content />
  </article>
</main>
