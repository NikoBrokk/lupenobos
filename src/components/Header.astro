---
const nav = [
  { href: "/analyser/", label: "Analyser" },
  { href: "/spillerprofiler/", label: "Spillerprofiler" },
  { href: "/dypanalyse/", label: "Dypanalyse" },
];
---
<header class="sticky top-0 z-50 bg-[#0a1c38cc] backdrop-blur border-b border-white/10">
  <div class="mx-auto max-w-[var(--container)] h-16 px-4 sm:px-6 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.svg" alt="Lupen OBOS" class="h-8 w-auto" />
      <span class="font-[700] tracking-tight text-xl" style="font-family: 'Space Grotesk', sans-serif;">Lupen OBOS</span>
    </a>
    <nav class="hidden md:flex items-center gap-6">
      {nav.map((n) => (
        <a href={n.href} class="text-sm font-semibold text-white/80 hover:text-white">{n.label}</a>
      ))}
    </nav>
  </div>
</header>
