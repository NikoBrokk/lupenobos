---
// src/components/Hero.astro
const title = "Data, kjærlighet og fotballnerding";
const tagline =
  "Dybdeinnsikt i unge talenter, kamputvikling og trender – skrevet for både nerder og hverdagsfans.";
---
<section class="relative isolate overflow-hidden rounded-3xl bg-gradient-to-br from-[#0B1A35] via-[#112B59] to-[#0B1A35] px-6 py-14 sm:py-20 md:px-12">
  {/* textured glow */}
  <div class="pointer-events-none absolute inset-0 opacity-20 [background:radial-gradient(60%_40%_at_20%_10%,#58f18a_0,rgba(88,241,138,0)_60%),radial-gradient(50%_30%_at_80%_0%,#3ea3ff_0,rgba(62,163,255,0)_55%)]"></div>

  <div class="mx-auto max-w-5xl relative">
    <p class="text-sm/6 font-medium tracking-wide text-white/70">OBOS‑ligaen</p>
    <h1 class="mt-2 text-3xl sm:text-4xl md:text-5xl font-extrabold text-white leading-tight">
      {title}
    </h1>
    <p class="mt-4 max-w-2xl text-base md:text-lg text-white/80">{tagline}</p>

    <div class="mt-8 flex items-center gap-3">
      <a href="/artikler" class="inline-flex items-center gap-2 rounded-xl bg-[#00A651] px-5 py-3 text-white font-semibold shadow-[0_8px_30px_rgba(0,166,81,.35)] transition hover:translate-y-[-1px] focus:outline-none focus:ring-4 focus:ring-emerald-300">
        Les analyser
        <svg width="18" height="18" fill="currentColor" viewBox="0 0 20 20"><path d="M7 5l5 5-5 5"/></svg>
      </a>
      <a href="/talenter" class="inline-flex items-center gap-2 rounded-xl border border-white/20 bg-white/0 px-5 py-3 text-white/90 backdrop-blur transition hover:bg-white/10 focus:outline-none focus:ring-4 focus:ring-white/30">
        Unge spillere
      </a>
    </div>
  </div>
</section>
