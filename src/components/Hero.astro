const { eyebrow = "OBOS-ligaen", heading = "Analyse, engasjement og kj√¶rlighet til OBOS-fotballen", sub = "Dybdeinnsikt i unge OBOS-profiler, kampbildet og ligaens trender" } = Astro.props;
---
<section class="relative overflow-hidden">
  <div class="absolute inset-0 opacity-30 pointer-events-none"
       style="background: radial-gradient(60% 60% at 20% 10%, #1bb56c33 0%, transparent 60%), radial-gradient(50% 50% at 80% 20%, #3a83ff22 0%, transparent 60%);"></div>

  <div class="mx-auto max-w-[var(--container)] px-4 sm:px-6 pt-14 pb-16">
    <img src="/logo-mark.svg" alt="" class="h-10 w-auto mb-4 opacity-90" />
    <p class="text-lupen-accent font-semibold mb-2">{eyebrow}</p>
    <h1 class="text-4xl sm:text-5xl font-bold leading-tight mb-4" style="font-family: 'Space Grotesk', sans-serif;">
      {heading}
    </h1>
    <p class="text-white/80 max-w-2xl mb-8">{sub}</p>
    <div class="flex gap-3">
      <a href="/analyser/" class="btn btn-primary">Les analyser</a>
      <a href="/spillerprofiler/" class="btn btn-ghost">Spillerprofiler</a>
    </div>
  </div>
</section>
