---
const {
  title,
  excerpt,
  date,
  tags = [],
  href,
  image
} = Astro.props;
---

<article class="group relative overflow-hidden rounded-2xl border border-slate-200/60 bg-white p-4 md:p-5 shadow-[0_8px_30px_rgba(2,8,23,.06)] transition hover:shadow-[0_12px_40px_rgba(2,8,23,.12)]">
  <a href={href} class="flex gap-4 md:gap-6">
    {image && (
      <img
        src={image}
        alt=""
        class="h-24 w-24 md:h-28 md:w-28 rounded-xl object-cover ring-1 ring-slate-200"
        loading="lazy"
      />
    )}
    <div class="min-w-0">
      <h3 class="text-slate-900 font-semibold text-base md:text-lg leading-snug group-hover:underline">
        {title}
      </h3>
      {excerpt && <p class="mt-1 text-slate-600 text-sm line-clamp-2">{excerpt}</p>}
      <div class="mt-3 flex flex-wrap items-center gap-2">
        <time class="text-xs text-slate-500">{date}</time>
        {tags.length > 0 && <span class="h-1 w-1 rounded-full bg-slate-300"></span>}
        {tags.map(tag => (
          <span class="text-xs rounded-full bg-slate-100 px-2 py-1 text-slate-700">{tag}</span>
        ))}
      </div>
    </div>
    <span class="ml-auto hidden md:flex items-center self-center opacity-0 translate-x-[-6px] text-slate-400 transition group-hover:opacity-100 group-hover:translate-x-0">â†’</span>
  </a>
</article>
