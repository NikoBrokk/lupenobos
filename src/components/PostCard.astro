---
import { getCollection } from 'astro:content';
const { post } = Astro.props;
const url = `/artikler/${post.slug}/`;
---
<article class="card hover:shadow-lg transition">
  <a href={url} class="no-underline">
    <h3 class="text-xl font-semibold">{post.data.title}</h3>
    <p class="mt-1 text-gray-600">{post.data.excerpt}</p>
    <div class="mt-3 text-sm text-gray-500">Publisert: {post.data.date.toLocaleDateString('no-NO')}</div>
    <div class="mt-2 flex gap-2">
      {post.data.tags?.map((t) => <span class="badge">{t}</span>)}
    </div>
  </a>
</article>
