---
const { title = "Lupen OBOS", description = "Data, kjærlighet og fotballnerding", ogImage = "/og-default.jpg" } = Astro.props;
---
<html lang="no" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} – Lupen OBOS</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gradient-to-b from-lupen-bg via-[#0b2144] to-[#08182f] text-white">
    <slot />
  </body>
</html>
