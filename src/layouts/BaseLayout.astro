---
const { title = "Lupen OBOS", description = "Norges mest engasjerende og datadrevne side for OBOS-ligaen", canonical } = Astro.props;
---
<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/logo.svg" />
    <link rel="canonical" href={canonical ?? Astro.url.href} />
    <title>{title}</title>
    <style is:global>@import "/src/styles/global.css";</style>
  </head>
  <body class="font-sans">
    <header class="border-b">
      <div class="container flex items-center justify-between py-4 gap-4">
        <a href="/" class="flex items-center gap-3 no-underline">
          <img src="/logo.svg" alt="Lupen OBOS" class="h-8 w-auto" />
          <span class="font-semibold tracking-wide">Lupen OBOS</span>
        </a>
        <nav class="flex items-center gap-1">
          <a class="navlink" href="/artikler/">Artikler</a>
          <a class="navlink" href="/talenter/">Talenter</a>
          <a class="navlink" href="/om/">Om</a>
        </nav>
      </div>
    </header>
    <main class="container py-8">
      <slot />
    </main>
    <footer class="mt-16 border-t">
      <div class="container py-8 text-sm text-gray-600 flex items-center justify-between">
        <p>© {new Date().getFullYear()} Lupen OBOS · Innsikt i OBOS-ligaen</p>
        <p><a href="https://github.com/" target="_blank" rel="noreferrer">GitHub</a></p>
      </div>
    </footer>
  </body>
</html>
